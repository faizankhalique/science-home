<div
  class="modal fade"
  id="addCreditModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
          onclick="window.location.href=`http://localhost:3000/addcredit`"
        >
          <span aria-hidden="true">&times;</span>
        </button>
        <h2 class="modal-title" id="exampleModalLabel">
          <center><b> Add Credit</b></center>
        </h2>
      </div>
      <div class="modal-body">
        <form id="clientForm">
          <!-- <div class="form-group">
            <label for="userName">Client Name</label>
            <input
              type="text"
              class="form-control"
              id="userName"
              name="userName"
              aria-describedby="Help"
              placeholder="Client Name"
              pattern="^[a-z A-Z]*$"
              required
            />
          </div> -->
          <div class="form-group">
            <label for="userName">Client Name</label>
            <select class="form-control" id="clientId" required>
              <option value="">Select</option>
              <% clients.map((client)=>{%>
              <option value="<%= client.clientId%>"
                ><%= client.firstName%> <%= client.lastName%> [<%=
                client.userName%>]</option
              >
              <% });%>
            </select>
          </div>
          <div class="form-group" id="date">
            <label for="date">Date</label>
            <input
              type="date"
              class="form-control"
              id="Date"
              name="Date"
              aria-describedby="Help"
              required
            />
          </div>
          <label for="my-input" class="form-check-label">PaymentOptions</label>
          <div class="form-group">
            <div
              style="padding:3px"
              class="form-check form-check-inline col-md-12"
            >
              <label for="my-input" class="form-check-label">Cash</label>
              <input
                id="paymentOptions"
                class="form-check-input"
                type="radio"
                name="paymentOptions"
                value="cash"
                required
              />
              <label
                style="margin-left:3px"
                for="my-input"
                class="form-check-label"
                >Check
              </label>
              <input
                id="paymentOptions"
                class="form-check-input"
                type="radio"
                name="paymentOptions"
                value="check"
                required
              />
            </div>
          </div>
          <div
            class="form-group"
            style="display: none"
            id="deliveryChallanIdDiv"
          >
            <label for="challanId">Delivery Challan Id(optional)</label>
            <input
              type="number"
              class="form-control"
              id="challanId"
              name="challanId"
              aria-describedby="Help"
              placeholder="Challan Id"
            />
          </div>
          <div class="form-group" style="display: none" id="amountDiv">
            <label for="amount">Amount</label>
            <input
              type="number"
              class="form-control"
              id="amount"
              name="amount"
              min="0"
              aria-describedby="Help"
              placeholder="Amount"
              required
            />
          </div>
          <div class="form-group" style="display: none" id="checkNumberDiv">
            <label for="amount">CheckNo</label>
            <input
              type="text"
              class="form-control"
              id="checkNumber"
              name="checkNumber"
              aria-describedby="Help"
              placeholder="Check No"
            />
          </div>
          <div style="margin-left:75%">
            <button type="submit" class="btn btn-primary  ">
              Add
            </button>
            <button style="margin: 4px" type="reset" class="btn btn-danger">
              clear
            </button>
          </div>
        </form>
        <div id="toast" style="margin-top: 100px"></div>
      </div>
      <!-- <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div> -->
    </div>
  </div>
</div>
