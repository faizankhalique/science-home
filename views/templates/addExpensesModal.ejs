<div
  class="modal fade"
  id="addExpensesModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
          onclick="window.location.href=`http://localhost:3000/addexpenses`"
        >
          <span aria-hidden="true">&times;</span>
        </button>
        <h2 class="modal-title" id="exampleModalLabel">
          <center><b> Add Expenses</b></center>
        </h2>
      </div>
      <div class="modal-body">
        <form id="addExpesesForm">
          <div class="form-group">
            <label for="">Description</label>
            <input
              type="text"
              class="form-control"
              id="description"
              name="description"
              aria-describedby="Help"
              required
            />
          </div>
          <div class="form-group">
            <label for="date">Date</label>
            <input
              type="date"
              class="form-control"
              id="date"
              name="date"
              aria-describedby="Help"
              required
            />
          </div>
          <div class="form-group">
            <label for="">Amount</label>
            <input
              type="number"
              min="0"
              class="form-control"
              id="amount"
              name="amount"
              aria-describedby="Help"
              required
            />
          </div>
          <div style="margin-left:75%">
            <button type="submit" class="btn btn-primary  ">
              Add
            </button>
            <button style="margin: 4px" type="reset" class="btn btn-danger">
              clear
            </button>
          </div>
        </form>
        <div id="toast" style="margin-top: 100px"></div>
      </div>
    </div>
  </div>
</div>
