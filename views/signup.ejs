  <body style="background-color: #666666;">
    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100">
          <form id="signup" class="login100-form validate-form">
            <span class="login100-form-title p-b-43">
              Sign Up
            </span>

            <div
              class="wrap-input100 validate-input"
              data-validate="Valid fullname is required:"
            >
              <input
                class="input100"
                type="text"
                name="fillname"
                id="fullname"
                title="Full Name should be alphabet characters"
                pattern="^[a-z A-Z]*$"
              />
              <span class="focus-input100"></span>
              <span class="label-input100">Full Name</span>
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Email is required"
            >
              <input
                class="input100"
                type="email"
                name="email"
                id="email"
                title="someone@example.com"
                pattern="^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$"
              />
              <span class="focus-input100"></span>
              <span class="label-input100">Email</span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Password is required"
            >
              <input
                class="input100"
                type="password"
                name="password"
                id="password"
                pattern=".{6,}"
                title="password should be 6 "
              />
              <span class="focus-input100"></span>
              <span class="label-input100">Password</span>
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="confirm-Password should be greater or equal to 6 characters"
            >
              <input
                class="input100"
                type="password"
                name="confirmpassword"
                id="confirmpassword"
                title="confirmpassword should be greater or equal to 6 characters"
                pattern=".{6,}"
              />
              <span class="focus-input100"></span>
              <span class="label-input100">confirm Password</span>
            </div>
            <!-- <div id="loader" style="visibility: hidden"></div> -->
            <div
              class="wrap-input100 validate-input"
              data-validate="Age is required: ex@abc.xyz"
            >
              <input
                class="input100"
                type="text"
                name="age"
                id="age"
                min="1"
                pattern="^[1-9]\d*$"
                title="please Enter Numeric character without start with 0"
              />
              <span class="focus-input100"></span>
              <span class="label-input100">Age</span>
            </div>
            <label for="" style="margin-left: 6px">Gender</label>
            <div class="form-inline" style="margin-top: 6px">
              <div class="form-check">
                <input
                  style="margin-left: 5px"
                  class="form-check-input"
                  type="radio"
                  name="gender"
                  id="gender"
                  value="male"
                  checked
                />
                <label class="form-check-label" for="exampleRadios1">
                  Male
                </label>
              </div>
              <div class="form-check">
                <input
                  style="margin-left: 10px"
                  class="form-check-input"
                  type="radio"
                  name="gender"
                  id="gender"
                  value="female"
                />
                <label class="form-check-label" for="exampleRadios2">
                  Female
                </label>
              </div>
            </div>
            <!-- <div
              class="wrap-input100 validate-input"
              data-validate="DOB is required: ex@abc.xyz"
            >
              <input class="input100 " type="date" name="dob" id="dob" />
              <span class="focus-input100"></span>
              <span class="label-input100">DOB</span>
            </div> -->
            <div
              style="margin-top: 8px"
              class="wrap-input100 validate-input"
              data-valiDOB="Address is required"
            >
              <input class="input100" type="text" name="address" id="address" />
              <span class="focus-input100"></span>
